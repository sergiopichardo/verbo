{
  "name": "@verbo/backend",
  "version": "0.1.0",
  "bin": {
    "verbo": "bin/verbo.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --profile default --outputs-file backendOutputs.json --require-approval never",
    "postdeploy": "cp backendOutputs.json ../frontend/src/config/backendOutputs.json",
    "destroy": "cdk destroy --all --profile default"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.6.1",
    "aws-cdk": "2.159.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2"
  },
  "dependencies": {
    "@aws-sdk/client-translate": "^3.654.0",
    "@types/aws-lambda": "^8.10.145",
    "@verbo/shared-types": "^1.0.0",
    "aws-cdk-lib": "2.159.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "source-map-support": "^0.5.21"
  }
}
